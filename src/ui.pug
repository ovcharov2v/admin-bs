                .label.label--red
                    span.label__text #Банкинг
                    button.label__close(aria-label="Закрыть")
                        +svg("close").label__close-icon
                .label
                    span.label__text  #Банкинг
                    button.label__close(aria-label="Закрыть")
                        +svg("close").label__close-icon
                .label
                    span.label__text #Банкинг
                    button.label__close(aria-label="Закрыть")
                        +svg("close").label__close-icon

        h2 Текст
        div
            p Текст цвет
            p(style="color: var(--color-text2)") Текст цвет
            p.color-green Текст цвет
            p.color-red Текст цвет
            p.color-orange Текст цвет
            p.text-with-dot Текст с точкой
            p.text-with-dot.text-with-dot--red Текст с точкой

        h2 Модальные окна
        .button-list
            button.button.button--outline-hover-blue(data-modal="success") Успех
            button.button.button--outline-hover-blue(data-modal="attention") Внимание
            button.button.button--outline-hover-blue(data-modal="error") Ошибка
            button.button.button--outline-hover-blue(data-modal="smile") Новость
            button.button.button--outline-hover-blue(data-modal="ghost") Ошибка
