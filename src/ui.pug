            .label
                span.label__text #Фишинг
            .label.label--navy
                span.label__text #Фишинг
            .label
                span.label__text #Банкинг
                button.label__close(aria-label="Закрыть")
                    +svg("close").label__close-icon
            // group
            .label-group
                .label.label--blue
                    +svg("wave-low").label__icon
                    span.label__text Низкая
                .label.label--violet
                    +svg("wave-medium").label__icon
                    span.label__text Высокая
