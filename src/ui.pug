                .form-group__input-box
                    .form-group__action-btn
                        +svg("search").form-group__action-icon
                    input.form-group__input.form-group__input--sm(type="search", placeholder="Нажмите для поиска")
            label.checkbox
                input.checkbox__input(type="checkbox")
                span.checkbox__text Текст
            label.checkbox.checkbox--solid
                input.checkbox__input(type="checkbox")
                span.checkbox__text Текст

        h2 Лейблы
