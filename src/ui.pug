extends pug/base

append styles 
    style.
        body {
            padding: 24px;
        }

        main {
            max-width: 1440px;
            margin: 0 auto;
            padding: 24px;
            background-color: var(--color-bg2);
            border-radius: 20px;
        }

        h2 {
            margin-top: 32px;
            margin-bottom: 18px;
            font-size: 24px;
            line-height: 1;
            font-weight: 500;
        }

        .icon-grid {
            display: grid;
            grid-template: auto / repeat(20, 24px);
            grid-gap: 10px;
        }

        .icon-grid svg {
            display: block;
            width: 24px;
            height: 24px;
        }

        .input-list {
            display: flex;
            flex-direction: column;
            gap: 24px;
            max-width: 400px;
        }

        .button-list {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            align-items: center;
        }

        .button-list + .button-list {
            margin-top: 16px;
        }

block content
    .container
        h2 Тема
        button.theme-switcher
            .theme-switcher__theme.theme-switcher__theme--light
                +svg('sun').theme-switcher__icon
                |Светлая
            .theme-switcher__theme.theme-switcher__theme--dark
                +svg('moon').theme-switcher__icon
                | Тёмная

        h2 Иконки
        .icon-grid
            include images/sprite/icons.html
        h2 Кнопки
