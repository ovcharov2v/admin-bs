        h2 Инпуты
        .input-list
            // group
            .form-group.form-group--action
                .form-group__title-box
                    p.form-group__title Текст
                .form-group__input-box
                    button.form-group__action-btn(aria-label="Очистить")
                        +svg("close").form-group__action-icon
                    input.form-group__input(type="text", placeholder="Текст")
                span.form-group__note текст
            // group
            .form-group.form-group--action.form-group--complete
                .form-group__title-box
                    p.form-group__title Текст
                .form-group__input-box
                    button.form-group__action-btn(aria-label="Очистить")
                        +svg("check").form-group__action-icon
                    input.form-group__input(type="text", placeholder="Текст")
                span.form-group__note текст
            // group
            .form-group.form-group--action.form-group--error
                .form-group__title-box
                    p.form-group__title Текст
                .form-group__input-box
                    button.form-group__action-btn(aria-label="Очистить")
                        +svg("close").form-group__action-icon
                    input.form-group__input(type="text", placeholder="Текст")
                span.form-group__note текст
            // group
            .form-group.form-group--search
                .form-group__input-box
                    .form-group__action-btn
                        +svg("search").form-group__action-icon
                    input.form-group__input(type="search", placeholder="Текст")
            // group
            .form-group.form-group--search
                .form-group__title-box
                    p.form-group__title Поиск
                    button.form-group__reset-btn
                        +svg("close").form-group__reset-icon
